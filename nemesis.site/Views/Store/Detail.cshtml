@model Nemesis.Site.Models.StoreDetailViewModel

@{
    ViewBag.Title = "Store Details";
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#editable").hide();
            $("#readonly").show();

            $("#edit_link").click(function () {
                $("#edit_link").hide();
                $("#editable").show();
                $("#readonly").hide();
            })
        })
    </script>
}

<h2>Details</h2>

<div>
    <div class="panel-title">
        <h1>Store Details</h1>
    </div>
    <div class="panel-default" id="readonly">
        <div class="row">
            <div class="col-lg-4">Name:</div>
            <div class="col-lg-8">@Html.LabelFor(m => m.Name)</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Address:</div>
            <div class="col-lg-8">@Html.LabelFor(m => m.Address)</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Postcode:</div>
            <div class="col-lg-8">@Html.LabelFor(m => m.Postcode)</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Opening Hours:</div>
            <div class="col-lg-8">@Html.LabelFor(m => m.OpeningHours)</div>
        </div>
    </div>
    <a href="#" id="edit_link">Edit this record</a>
    <div class="panel-default" id="editable">
        @using (Html.BeginForm("Detail", "Store", FormMethod.Post)) { 
        <div class="row">
            <div class="col-lg-4">Name:</div>
            <div class="col-lg-8">@Html.TextBoxFor(m => m.Name)</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Address:</div>
            <div class="col-lg-8">@Html.TextBoxFor(m => m.Address)</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Postcode:</div>
            <div class="col-lg-8">@Html.TextBoxFor(m => m.Postcode)</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Opening Hours:</div>
            <div class="col-lg-8">@Html.TextBoxFor(m => m.OpeningHours)</div>
        </div>
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-8"><input type="submit" value="Save changes" /></div>
        </div>
        }
    </div>
</div>

