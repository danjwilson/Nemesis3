@model Nemesis.Site.Models.StoreDetailViewModel

@{
    ViewBag.Title = "Store Details";
}

<h2>Details</h2>

<div>
    <div class="panel-title">
        <h1>Store Details</h1>
    </div>
    <div class="panel-default">
        <div class="row">
            <div class="col-lg-4">Name:</div>
            <div class="col-lg-8">@Html.Label(Model.Name)</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Address:</div>
            <div class="col-lg-8">@Html.Label(Model.Address)</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Postcode:</div>
            <div class="col-lg-8">@Html.Label(Model.Postcode)</div>
        </div>
        <div class="row">
            <div class="col-lg-4">Opening Hours:</div>
            <div class="col-lg-8">@Html.Label(Model.OpeningHours)</div>
        </div>
    </div>
</div>
